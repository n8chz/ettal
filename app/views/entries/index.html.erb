<p id="notice"><%= notice %></p>

<h1>Entries</h1>

<table>
  <thead>
    <tr>
      <th>Transaction</th>
      <th>Item</th>
      <th>Price</th>
      <th>Qty</th>
      <th>Is debit</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.transaction %></td>
        <td><%= entry.item %></td>
        <td><%= entry.price %></td>
        <td><%= entry.qty %></td>
        <td><%= entry.is_debit %></td>
        <td><%= entry.account %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path %>
